<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- Ensures the content fills the viewport initially -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Title -->
        <EditText
            android:id="@+id/product_title"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:hint="Product Title"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:inputType="text" />
        <EditText
            android:id="@+id/product_subtitle"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:hint="Product Subtitle"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:inputType="text" />

        <!-- Product Price -->
        <EditText
            android:id="@+id/product_price"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:hint="Product Price"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/product_view_type"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:hint="Product View Type 2 or 3"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/product_category"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:hint="Product Category"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:inputType="text" />

        <EditText
            android:id="@+id/product_cod"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:hint="Is Cash on Delivery Available?"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:inputType="text" />

        <!-- Product Description -->
        <EditText
            android:id="@+id/product_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:hint="Product Description"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:inputType="textMultiLine"
            android:lines="4" />

        <!-- Image URL 1 -->
        <EditText
            android:id="@+id/image_url_1"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:hint="Product Image URL 1"
            android:inputType="textUri" />

        <!-- Image Preview 1 -->
        <ImageView
            android:id="@+id/image_preview_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Image Preview 1"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <!-- Image URL 2 -->
        <EditText
            android:id="@+id/image_url_2"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:hint="Product Image URL 2"
            android:inputType="textUri" />

        <!-- Image Preview 2 -->
        <ImageView
            android:id="@+id/image_preview_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Image Preview 2"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <!-- Image URL 3 -->
        <EditText
            android:id="@+id/image_url_3"
            android:layout_height="52dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#70000000"
            android:theme="@style/BlackTheme"
            android:hint="Image URL 3"
            android:inputType="textUri" />

        <!-- Image Preview 3 -->
        <ImageView
            android:id="@+id/image_preview_3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Image Preview 3"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <!-- City Spinner -->
        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Add Product Button -->
        <Button
            android:id="@+id/add_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Add Product"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Progress Bar (Initially hidden) -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="24dp"
            android:layout_gravity="center"
            android:theme="@style/BlackProgressBar"
            android:visibility="gone"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</ScrollView>
