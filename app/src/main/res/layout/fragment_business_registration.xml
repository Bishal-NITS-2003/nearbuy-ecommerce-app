<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".BusinessRegistrationFragment"
    android:orientation="vertical"
    android:weightSum="4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/sign_in_background"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/business_registration_back_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="14dp"
            android:contentDescription="Back Button"
            android:src="@drawable/back_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text="Become a Seller"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Marketing your product now in easy"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:elevation="36dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/card_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:text="Business Details"
            android:textStyle="bold"
            android:layout_marginTop="36dp"
            android:layout_marginStart="48dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <EditText
                android:drawableEnd="@drawable/ic_baseline_person_outline_24"
                android:drawableTint="@color/black"
                android:id="@+id/business_name"
                android:layout_height="52dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:hint="Business Name"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:background="@drawable/edit_text"
                android:textColorHint="#70000000"
                android:theme="@style/BlackTheme"/>
            <EditText
                android:drawableEnd="@drawable/ic_call"
                android:drawableTint="@color/black"
                android:id="@+id/business_phone"
                android:layout_height="52dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="24dp"
                android:hint="Whatsapp Number"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:background="@drawable/edit_text"
                android:textColorHint="#70000000"
                android:inputType="phone"
                android:theme="@style/BlackTheme"/>

            <EditText
                android:layout_marginTop="24dp"
                android:drawableEnd="@drawable/address"
                android:drawableTint="@color/black"
                android:id="@+id/business_address"
                android:layout_height="52dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:background="@drawable/edit_text"
                android:hint="Business Full Address"
                android:textColorHint="#70000000"
                android:theme="@style/BlackTheme" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp">

                <Button
                    android:id="@+id/become_seller_button"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:textSize="16sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:stateListAnimator="@null"
                    android:text="Register Business"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="26dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/business_registration_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="24dp"
                android:layout_gravity="center"
                android:theme="@style/BlackProgressBar"
                android:visibility="invisible" />

        </LinearLayout>



    </RelativeLayout>





</LinearLayout>